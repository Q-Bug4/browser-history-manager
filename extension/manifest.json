{
  "manifest_version": 3,
  "name": "Browser History Manager",
  "version": "1.0.0",
  "description": "A browser history management system",
  "permissions": [
    "history",
    "storage",
    "unlimitedStorage",
    "notifications"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "core/config-manager.content.js",
        "core/history-manager.content.js",
        "content/history-highlighter.js"
      ],
      "css": ["content/history-highlighter.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["core/*.js"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
} 